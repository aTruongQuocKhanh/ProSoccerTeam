<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/informationbg"
              android:orientation="vertical">

    <com.khanhtq.appcore.view.CustomTextView
        android:id="@+id/team_name_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxWidth="300dp"
        android:textColor="@color/colorText"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <com.khanhtq.appcore.view.CustomTextView
        android:id="@+id/team_desc_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:maxWidth="300dp"
        android:textColor="#b9b9b9"
        android:textSize="14sp"/>

    <com.khanhtq.appcore.view.CustomTextView
        android:id="@+id/team_link_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxWidth="300dp"
        android:singleLine="true"
        android:text="@string/go_to_website"
        android:textColor="@color/colorText"
        android:textSize="14sp"/>

    <RelativeLayout
        android:layout_width="@dimen/info_window_distance_box_width"
        android:layout_height="@dimen/infor_window_distance_box_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/vertical_margin">

        <ImageView
            android:id="@+id/cur_marker_image"
            android:layout_width="@dimen/info_window_marker_width"
            android:layout_height="@dimen/info_window_marker_height"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:src="@drawable/informationicn_left"/>

        <com.khanhtq.appcore.view.CustomTextView
            android:id="@+id/distance_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/vertical_margin"
            android:textSize="12sp"
            android:textColor="@color/colorText"/>

        <View
            android:layout_width="175dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorText"/>

        <RelativeLayout
            android:id="@+id/team_marker"
            android:layout_width="@dimen/info_window_marker_width"
            android:layout_height="@dimen/info_window_marker_height"
            android:layout_alignParentRight="true"
            android:background="@drawable/informationicn_right"
            android:gravity="center">

            <com.khanhtq.appcore.view.RoundedImageView
                android:id="@+id/team_icon_img_view"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
